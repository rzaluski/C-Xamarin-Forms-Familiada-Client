<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FamiliadaClientForms.View.ControlPanelPage"
             x:Name="ControlPanelPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Button Text="Losuj pytanie" Command="{Binding RandQuestionCommand}"/>
            <Label Text="{Binding CurrentQuestion.QuestionText}"/>
            <ListView x:Name="listViewAnswers" ItemsSource="{Binding CurrentQuestion.Answers}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Button Text="{Binding AnswerText}" Command="{Binding Path=BindingContext.AnswerCommand, Source={x:Reference Name=listViewAnswers}}" CommandParameter="{Binding AnswerText}"/>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>